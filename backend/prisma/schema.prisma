generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  post      Post[]
}

model Post {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  address     String
  city        String
  media       String[]
  bedroom     Int
  bathroom    Int
  price       Int
  longitude   String
  latitude    String
  type        Type
  property    Property
  createdAt   DateTime     @default(now())
  user        User         @relation(fields: [userId], references: [id])
  userId      String       @db.ObjectId
  postDetails PostDetails?
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
  farm
}

model PostDetails {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  desc      String
  utilities String?
  petPolicy String?
  income    String?
  size      Int?
  school    Int?
  bus       String?
  resturant String?
  post      Post    @relation(fields: [postId], references: [id])
  postId    String  @unique @db.ObjectId
}
